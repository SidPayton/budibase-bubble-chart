        "settings": [
          {
            "type": "dataProvider",
            "label": "Data Provider",
            "key": "dataProvider",
            "required": true
          },
          {
            "type": "field",
            "label": "Serie category column",
            "key": "serieField",
            "info": "If left null, there will be only one DEFAULT category"
          },
          {
            "type": "field",
            "label": "x axis field",
            "key": "xAxisField",
            "required": true
          },
          {
            "type": "field",
            "label": "y axis field",
            "key": "yAxisField",
            "required": true
          },
          {
            "type": "field",
            "label": "Bubble Size field",
            "key": "bubbleSizeField",
            "required": true
          }
        ]
      },
      {
        "section": true,
        "name": "General options",
        "settings": [
          {
            "type": "number",
            "label": "Chart height",
